<%- include('partials/header.ejs') %>

<div class="pill-cont">
    <h1>Welcome, <%= username %></h1>

    <div class="box">
        <h4>My Pills</h4>
        <% pills.forEach(pill => { %>
            <a href="/edit/<%= pill.id %>" class="pill-box-link" style="text-decoration: none; color: inherit;">
                <div class="pill-box">
                    <p><%= pill.pill_name %></p>
                    <p><%= pill.reminder_time1 %> <%= pill.reminder_time2 ? ' | ' + pill.reminder_time2 : '' %></p>
                </div>
            </a>
        <% }) %>
        <div class="pill-box"><a href="/add"><p id="add">+</p></a></div>
    </div>
    

    <!-- Move the "Add a new pill" section below the pill boxes -->


    <div class="apt-box">
        <h4>Upcoming Appointments</h4>
        <% appointments.forEach(appointment => { %>
            <div class="apt" onclick="window.location.href='/edit-appointment/<%= appointment.id %>'">
                <p><%= appointment.department %></p>
                <p>Date: <%= new Date(appointment.date).toLocaleDateString() %></p>
                <p>Time: <%= appointment.time %></p>
            </div>
        <% }) %>
        <div class="apt">
            <a href="/add-appointment"><p id="apt-add">+</p></a>
        </div>
    </div>
    
    
    
    
    
</div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
</body>
</html>

